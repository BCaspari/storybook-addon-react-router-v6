{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "incremental": false,
    "isolatedModules": true,
    "jsx": "react",
    "lib": ["es2020", "dom", "dom.iterable"],
    "module": "commonjs",
    "noImplicitAny": true,
    "rootDir": "./",
    "skipLibCheck": true,
    "target": "es2020"
  },
  "include": [
    "src/**/*",
    "stories/**/*"
  ],
}
